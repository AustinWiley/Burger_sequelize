<div class="container">

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"><img class="center-block" src="https://uproxx.files.wordpress.com/2015/03/mcdonalds-bacon-mcdouble-copy.png?w=650&h=400" /></div>
        <div class="col-md-4"></div>
    </div>

    <div class="row">

    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button class="btn btn-outline-secondary" type="button" id="button-addon1">Add</button>
        </div>
        <input type="text" class="form-control" placeholder="Add A New Burger" aria-label="Example text with button addon"
            aria-describedby="button-addon1">
    </div>

    <div class="row">
        <div class="col-md-6">
            <ul class="list-group">
                <li class="list-group-item active bg-warning">Available Burgers</li>
                {{#each burgers}}
                <li class="list-group-item"><button type="button" class="btn btn-warning btn-sm" data={{id}}>Eat! </button>    {{burger_name}} </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul class="list-group primary">
                <li class="list-group-item active">Devoured Burgers</li>
                {{#each burgers}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/each}}
            </ul>
        </div>
    </div>




    <h2>Add a Buger</h2>

</div>