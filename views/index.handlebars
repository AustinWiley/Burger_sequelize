<div class="container">

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"><img class="center-block" src="https://uproxx.files.wordpress.com/2015/03/mcdonalds-bacon-mcdouble-copy.png?w=650&h=400" /></div>
        <div class="col-md-4"></div>
    </div>

    <div class="row">

    </div>
    <div class="input-group mb-3 border-success">
        <div class="input-group-prepend ">
            <button class="btn btn-outline-secondary bg-success text-white new_burger" type="button" id="button-addon1">Add</button>
        </div>
        <input type="text" id="burger_name" class="form-control" placeholder="Add A New Burger" aria-label="Example text with button addon"
            aria-describedby="button-addon1">
    </div>

    <div class="row">
        <div class="col-md-6">
            <ul class="list-group border-warning">
                <li class="list-group-item active bg-warning border-warning">Click on a Burger to eat it!</li>
                {{#each burgers}}
                <li class="list-group-item eat_burger"><button type="button" class="btn btn-warning btn-sm" data-burger={{id}} value={{id}}>{{burger_name}}</button></li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul class="list-group">
                <li class="list-group-item active bg-danger border-danger">Devoured Burgers</li>
                {{#each burgers}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

</div>